<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.educar.actividad2_2.Activity4"
    android:background="#ffbb50">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="43dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_tituloBusqueda"
            android:hint="@string/hint_filtro" />
    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="386dp"
        android:id="@+id/lv_lista" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/bt_volver"
        android:background="@drawable/back6"
        android:layout_gravity="right" />
</LinearLayout>
